<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/user_list_item"
        android:layout_height="88dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_user"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorMaterialDarkText"
            android:src="@drawable/ic_person"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/imv_user_email"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_contact_mail"
            android:alpha=".86"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="80dp"
            tools:ignore="MissingConstraints"/>

        <TextView
            style="@style/Text.Primary"
            android:id="@+id/tv_bakeli_nom"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:textColor="@color/colorTextDefault"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Full Name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="16dp"
            tools:ignore="MissingConstraints"/>

        <TextView
            style="@style/Text.Secondary"
            android:id="@+id/tv_bakeli_email"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            tools:text="E-Mail"
            android:textColor="@color/colorTextSecondary"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="112dp"
            tools:ignore="MissingConstraints"/>

        <TextView
            style="@style/Text.Secondary"
            android:id="@+id/tv_bakeli_id"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/colorTextSecondary"
            tools:text="ID"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>